generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  password String
  psikotes Boolean  @default(false)
  profile  Profile?
}

model Profile {
  id           String        @id @default(cuid())
  telp         String?
  jenisKelamin JenisKelamin?
  birthdate    String?
  jenisKhodam  String?
  kepribadian  String?       @default("-")
  user         Users?        @relation(fields: [userId], references: [id])
  userId       String?       @unique
}

enum JenisKelamin {
  LAKI_LAKI
  PEREMPUAN
}
